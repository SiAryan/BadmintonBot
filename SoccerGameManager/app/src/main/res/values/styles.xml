<resources>

    <!-- Base application theme. -->
    <style name="AppThemeDark" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccentDark</item>
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="homeAsUpIndicator">@drawable/ic_menu_black_24dp</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
    </style>
    <style name="AppThemeLight" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccentLight</item>
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="homeAsUpIndicator">@drawable/ic_menu_black_24dp</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:windowLightStatusBar">true</item>

    </style>
    <style name="ShapeAppearanceOverlay.SoccerGameManager.Menu" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">24dp</item>
        <item name="cornerSizeTopRight">24dp</item>

    </style>
    <style name="chipTextAppearance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:fontFamily">@font/raleway_medium</item>
    </style>


</resources>
